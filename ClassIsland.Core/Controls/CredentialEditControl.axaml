<UserControl x:Class="ClassIsland.Core.Controls.CredentialEditControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassIsland.Core.Controls"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:CredentialEditControl}}">
        <StackPanel IsVisible="{Binding CredentialString, Converter={x:Static StringConverters.IsNullOrEmpty}}">
            <Button Click="ButtonEditCredentialString_OnClick" Theme="{StaticResource TransparentButton}">
                <local:IconText Glyph="&#xe00d;" Text="添加…"/>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    IsVisible="{Binding CredentialString, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <Button Click="ButtonEditCredentialString_OnClick" Theme="{StaticResource TransparentButton}">
                <local:IconText Glyph="&#xe7c9;" Text="编辑…"/>
            </Button>
            <Button Click="ButtonClearCredentialString_OnClick" Theme="{StaticResource TransparentButton}"
                    Margin="4 0 0 0">
                <local:IconText Glyph="&#xe1bd;" Text="清除…"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

