<ci:ActionSettingsControlBase x:Class="ClassIsland.Controls.ActionSettingsControls.AppRestartActionSettingsControl"
                              x:TypeArguments="actionSettings:AppRestartActionSettings"
                              d:DataContext="{d:DesignInstance Type=local:AppRestartActionSettingsControl}"
                              xmlns="https://github.com/avaloniaui"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:ci="http://classisland.tech/schemas/xaml/core"
                                                                                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:ClassIsland.Controls.ActionSettingsControls"
                              xmlns:controls="clr-namespace:ClassIsland.Controls"
                              xmlns:actionSettings="clr-namespace:ClassIsland.Models.Actions"
                              mc:Ignorable="d"
                              d:DesignHeight="450"
                              d:DesignWidth="800">
    <Grid ColumnDefinitions="Auto,Auto,*,Auto"
          DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:AppRestartActionSettingsControl}}">

        <CheckBox IsChecked="{Binding Settings.Value}" Content="静默重启"></CheckBox>

    </Grid>
</ci:ActionSettingsControlBase>
